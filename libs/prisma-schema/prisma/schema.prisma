generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JenisDiskon {
  PERSENTASE
  NOMINAL
}

enum SatuanWaktuDiskon {
  HARI
  BULAN
  TAHUN
}

enum StatusLangganan {
  AKTIF
  TIDAK_AKTIF
  ISOLIR
  DISMANTLE
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String  @unique
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)

  profile   Profile?
  langganan Langganan[]
}

model Profile {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  namaPelanggan String
  noNIK         String   @unique
  noRegistrasi  String   @unique
  alamat        String
  noWA          String
  paket         String
  tglAktif      DateTime
  tglExp        DateTime
  payment       String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Paket {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  kecepatan   String
  harga       Decimal @db.Decimal(18, 2)
  isLangganan Boolean @default(false)
  isActive    Boolean @default(false)

  produks Produk[]
}

model Produk {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nama              String
  diskon            Int               @default(0)
  jenisDiskon       JenisDiskon       @default(NOMINAL)
  lamaWaktuDiskon   Int               @default(0)
  satuanWaktuDiskon SatuanWaktuDiskon @default(TAHUN)
  tglMulaiDiskon    DateTime?
  tglSelesaiDiskon  DateTime?

  paket   Paket  @relation(fields: [paketId], references: [id])
  paketId String

  langganan Langganan[]
}

model Langganan {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  userId     String
  produk     Produk   @relation(fields: [produkId], references: [id])
  produkId   String
  tglMulai   DateTime
  tglSelesai DateTime
  status     Boolean  @default(false)

  tagihan Tagihan[]
}

model Tagihan {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  langganan   Langganan @relation(fields: [langgananId], references: [id])
  langgananId String

  tglMulai   DateTime
  tglSelesai DateTime
  status     Boolean  @default(false)
}
